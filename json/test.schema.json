{
    "$id": "https://example.com/person.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Person",
    "type": "object",
    "properties": {
        "firstName": {
            "description": "The person's first name",
            "type": "string",
            "required": true
        },
        "lastName": {
            "description": "The person's last name",
            "type": "string",
            "required": true
        },
        "age": {
            "description": "Age in years which must be equal to or greater than zero",
            "type": "integer",
            "minimum": 0,
            "required": true
        },
        "phone": {
            "items": {
                "type": "string"
            },
            "uniqueItems": true,
            "required": true
        },
        "data": {
            "items": {
                "items": [
                    {"type": "integer", "required": true},
                    {"type": "string", "required": true}
                ],
                "maxItems": 2
            },
            "required": true
        },
        "address": {
            "properties": {
                "street": {
                    "type": "string",
                    "required": true
                },
                "city": {
                    "type": "string",
                    "required": true
                },
                "code": {
                    "description": "Test only numbers [0-9]",
                    "type": "string",
                    "pattern": "^[0-9]*$",
                    "required": true
                },
                "country": {
                    "type": "string",
                    "required": true
                }
            }
        }
    }
}

