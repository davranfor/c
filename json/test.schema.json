{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://json-schema.org/draft/2019-09/schema",
    "title": "Person",
    "type": "object",
    "$defs": {
        "countries": {
            "enum": ["Spain", "France", "Italy"]
        }
    },
    "properties": {
        "firstName": {
            "description": "The person's first name",
            "type": "string"
        },
        "lastName": {
            "description": "The person's last name",
            "type": "string"
        },
        "age": {
            "description": "Age in years which must be equal to or greater than zero",
            "type": "integer",
            "minimum": 0,
            "maximum": 120
        },
        "email": {
            "format": "email"
        },
        "phone": {
            "items": {
                "type": "string"
            },
            "maxItems": 2,
            "uniqueItems": true
        },
        "data": {
            "items": {
                "items": [
                    {"type": "integer"},
                    {"type": "string"}
                ],
                "additionalItems": false,
                "type": "array"
            }
        },
        "address": {
            "properties": {
                "street": {
                    "type": "string"
                },
                "city": {
                    "type": "string"
                },
                "code": {
                    "description": "Test only numbers [0-9]",
                    "type": "string",
                    "minLength": 5,
                    "maxLength": 5,
                    "pattern": "^[0-9]*$"
                },
                "country": {
                    "$ref": "#/$defs/countries"
                }
            }
        },
        "credit_card": {
            "type": "number"
        }
    },
    "dependentRequired": {
        "lastName": ["firstName"]
    },
    "dependentSchemas": {
        "credit_card": {
            "properties": {
                "billing_address": {"type": "string"}
            },
            "required": ["billing_address"]
        }
    }
}

